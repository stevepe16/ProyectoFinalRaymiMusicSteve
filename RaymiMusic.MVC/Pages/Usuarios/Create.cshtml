@page
@model RaymiMusic.MVC.Pages.Usuarios.CreateModel
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Crear Usuario";
    Layout = "_Layout";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-sm border-0 bg-dark text-light">
            <div class="card-body p-4">
                <h2 class="mb-4 text-center">
                    <i class="bi bi-person-plus-fill me-2"></i>Crear Usuario
                </h2>

                <form method="post">
                    <div class="mb-3">
                        <label asp-for="Usuario.Correo" class="form-label">
                            <i class="bi bi-envelope-fill me-1"></i>Correo
                        </label>
                        <input asp-for="Usuario.Correo" class="form-control" />
                        <span asp-validation-for="Usuario.Correo" class="text-danger" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="Usuario.HashContrasena" class="form-label">
                            <i class="bi bi-lock-fill me-1"></i>Contraseña
                        </label>
                        <input asp-for="Usuario.HashContrasena" class="form-control" type="password" />
                        <span asp-validation-for="Usuario.HashContrasena" class="text-danger" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="Usuario.Rol" class="form-label">
                            <i class="bi bi-person-badge-fill me-1"></i>Rol
                        </label>
                        <select asp-for="Usuario.Rol" class="form-control">
                            <option value="Free">Free</option>
                            <option value="Premium">Premium</option>
                            <option value="Artista">Artista</option>
                            <option value="Admin">Admin</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Usuario.PlanSuscripcionId" class="form-label">
                            <i class="bi bi-stars me-1"></i>Plan
                        </label>
                        <select asp-for="Usuario.PlanSuscripcionId" class="form-control"
                                asp-items="@(new SelectList(Model.Planes, "Id", "Nombre"))">
                            <option value="">-- Selecciona un plan --</option>
                        </select>
                    </div>

                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle me-1"></i> Guardar
                        </button>
                        <a asp-page="Index" class="btn btn-secondary">
                            <i class="bi bi-x-circle me-1"></i> Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
