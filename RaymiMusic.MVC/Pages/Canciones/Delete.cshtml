@page "{id:guid}"
@model RaymiMusic.MVC.Pages.Canciones.DeleteModel

<h1>Eliminar Canción</h1>

<h3>¿Seguro que deseas eliminar esta canción?</h3>

<dl class="row">
	<dt class="col-sm-2">Título</dt>
	<dd class="col-sm-10">@Model.Cancion.Titulo</dd>
	<dt class="col-sm-2">Artista</dt>
	<dd class="col-sm-10">@Model.Cancion.Artista.NombreArtistico</dd>
	<dt class="col-sm-2">Género</dt>
	<dd class="col-sm-10">@Model.Cancion.Genero.Nombre</dd>
</dl>

<form method="post">
	<button type="submit" class="btn btn-danger">Eliminar</button>
	<a asp-page="Index" class="btn btn-secondary">Cancelar</a>
</form>
