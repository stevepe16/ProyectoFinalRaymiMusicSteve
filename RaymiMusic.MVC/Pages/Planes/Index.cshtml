@page
@model RaymiMusic.MVC.Pages.Planes.IndexModel

@{
    ViewData["Title"] = "Planes de Suscripción";
    Layout = "_Layout";
}

<h1 class="mb-4">
    <i class="bi bi-stars me-2"></i>Planes de Suscripción
</h1>

<p>
    <a class="btn btn-primary" asp-page="Create">
        <i class="bi bi-plus-circle me-1"></i>Nuevo Plan
    </a>
</p>

<table class="table table-dark table-striped table-hover align-middle shadow-sm">
    <thead>
        <tr>
            <th><i class="bi bi-file-earmark-text me-1"></i>Nombre</th>
            <th><i class="bi bi-currency-dollar me-1"></i>Precio</th>
            <th><i class="bi bi-download me-1"></i>Descargas Máx.</th>
            <th class="text-center"><i class="bi bi-gear-fill"></i></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model.Planes)
        {
            <tr>
                <td>@p.Nombre</td>
                <td>@p.Precio.ToString("C")</td>
                <td>@p.DescargasMaximas</td>
                <td class="text-center">
                    <a asp-page="Edit" asp-route-id="@p.Id" class="btn btn-sm btn-outline-info me-2">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <a asp-page="Delete" asp-route-id="@p.Id" class="btn btn-sm btn-outline-danger">
                        <i class="bi bi-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
