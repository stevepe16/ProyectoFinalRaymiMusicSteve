@page
@model RaymiMusic.MVC.Pages.Usuarios.IndexModel
@{
    ViewData["Title"] = "Usuarios";
    Layout = "_Layout";
}

<h1 class="mb-4">
    <i class="bi bi-people-fill me-2"></i>Usuarios
</h1>

<p>
    <a class="btn btn-primary" asp-page="Create">
        <i class="bi bi-person-plus-fill me-1"></i>Nuevo Usuario
    </a>
</p>

<table class="table table-dark table-striped table-hover align-middle shadow-sm">
    <thead>
        <tr>
            <th><i class="bi bi-envelope-at-fill me-1"></i>Correo</th>
            <th><i class="bi bi-shield-lock-fill me-1"></i>Rol</th>
            <th><i class="bi bi-stars me-1"></i>Plan</th>
            <th class="text-center"><i class="bi bi-gear-fill me-1"></i>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model.Usuarios)
        {
            <tr>
                <td>@u.Correo</td>
                <td>@u.Rol</td>
                <td>@u.PlanSuscripcion?.Nombre</td>
                <td class="text-center">
                    <a asp-page="Edit" asp-route-id="@u.Id" class="btn btn-sm btn-outline-info me-2">
                        <i class="bi bi-pencil-square"></i> Editar
                    </a>
                    <a asp-page="Delete" asp-route-id="@u.Id" class="btn btn-sm btn-outline-danger">
                        <i class="bi bi-trash"></i> Eliminar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
