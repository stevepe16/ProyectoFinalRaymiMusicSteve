@page
@model RaymiMusic.MVC.Pages.Canciones.IndexModel
@{
    ViewData["Title"] = "Catálogo de Canciones";
    Layout = "_Layout";
}

<h1 class="mb-4">
    <i class="bi bi-music-note-list me-2"></i>Catálogo de Canciones
</h1>

<p>
    <a class="btn btn-primary" asp-page="Create">
        <i class="bi bi-plus-circle me-1"></i> Nueva Canción
    </a>
</p>

<table class="table table-dark table-striped table-hover align-middle shadow-sm">
    <thead>
        <tr>
            <th><i class="bi bi-music-note-beamed me-1"></i>Título</th>
            <th><i class="bi bi-person-fill me-1"></i>Artista</th>
            <th><i class="bi bi-tags-fill me-1"></i>Género</th>
            <th><i class="bi bi-clock-fill me-1"></i>Duración</th>
            <th class="text-center"><i class="bi bi-gear-fill"></i></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model.Canciones)
        {
            <tr>
                <td>
                    <a asp-page="Details" asp-route-id="@c.Id" class="text-info">
                        <i class="bi bi-play-fill me-1"></i>@c.Titulo
                    </a>
                </td>
                <td>@c.Artista.NombreArtistico</td>
                <td>@c.Genero.Nombre</td>
                <td>@c.Duracion</td>
                <td class="text-center">
                    <a asp-page="Edit" asp-route-id="@c.Id" class="btn btn-sm btn-outline-info me-2">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <a asp-page="Delete" asp-route-id="@c.Id" class="btn btn-sm btn-outline-danger">
                        <i class="bi bi-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
