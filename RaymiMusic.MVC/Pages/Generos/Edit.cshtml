@page "{id:guid}"
@model RaymiMusic.MVC.Pages.Generos.EditModel

@{
    ViewData["Title"] = "Editar Género";
    Layout = "_Layout";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-sm border-0 bg-dark text-light">
            <div class="card-body p-4">
                <h2 class="mb-4 text-center">
                    <i class="bi bi-pencil-fill me-2"></i>Editar Género
                </h2>

                <form method="post">
                    <input type="hidden" asp-for="Genero.Id" />

                    <div class="mb-3">
                        <label asp-for="Genero.Nombre" class="form-label">
                            <i class="bi bi-tag-fill me-1"></i>Nombre
                        </label>
                        <input asp-for="Genero.Nombre" class="form-control" />
                        <span asp-validation-for="Genero.Nombre" class="text-danger" />
                    </div>

                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle me-1"></i>Guardar cambios
                        </button>
                        <a asp-page="Index" class="btn btn-secondary">
                            <i class="bi bi-x-circle me-1"></i>Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
