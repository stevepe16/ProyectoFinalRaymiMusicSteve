@page "{id:guid}"
@model RaymiMusic.MVC.Pages.Canciones.DetailsModel

@{
    ViewData["Title"] = "Detalle de Canción";
    Layout = "_Layout";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-sm border-0 bg-dark text-light">
            <div class="card-body p-4">
                <h2 class="mb-4 text-center">
                    <i class="bi bi-music-note-beamed me-2"></i>@Model.Cancion.Titulo
                </h2>

                <p>
                    <i class="bi bi-person-fill me-1"></i>
                    <strong>Artista:</strong> @Model.Cancion.Artista.NombreArtistico
                </p>
                <p>
                    <i class="bi bi-tags-fill me-1"></i>
                    <strong>Género:</strong> @Model.Cancion.Genero.Nombre
                </p>
                <p>
                    <i class="bi bi-clock-fill me-1"></i>
                    <strong>Duración:</strong> @Model.Cancion.Duracion
                </p>

                <div class="mb-4">
                    <audio controls preload="metadata" class="w-100 rounded border">
                        <source src="@Model.UrlStreaming" type="audio/mpeg" />
                        Tu navegador no soporta el elemento
                        <code>audio</code>.
                    </audio>
                </div>

                <div class="text-center">
                    <a asp-page="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle me-1"></i>Volver al listado
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
