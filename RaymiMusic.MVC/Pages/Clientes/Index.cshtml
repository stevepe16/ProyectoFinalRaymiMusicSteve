@page
@model RaymiMusic.MVC.Pages.Clientes.IndexModel
@{
    ViewData["Title"] = "Bienvenido - Cliente";
    Layout = "_Layout";
}

<!-- Contenedor principal -->
<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block bg-dark text-light">
            <div class="position-sticky">
                <h2 class="text-center">RaymiMusic</h2>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link text-light" href="#">Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" href="#">Buscar</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" href="#">Tu biblioteca</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" href="#">Playlists</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" href="#">Configuración</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" href="#">Cerrar sesión</a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Contenido principal -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-4">
            <h3 class="mt-4">Bienvenido a tu portal de cliente</h3>
            <div class="row">
                <div class="col-md-6">
                    <div class="card mb-4">
                        <img src="https://via.placeholder.com/500x300" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">Lista de reproducción recomendada</h5>
                            <p class="card-text">Disfruta de tus canciones favoritas con nuestras recomendaciones.</p>
                            <a href="#" class="btn btn-primary">Ver Playlist</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card mb-4">
                        <img src="https://via.placeholder.com/500x300" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">Últimos lanzamientos</h5>
                            <p class="card-text">Mantente al día con los nuevos lanzamientos de tus artistas favoritos.</p>
                            <a href="#" class="btn btn-primary">Ver Más</a>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>