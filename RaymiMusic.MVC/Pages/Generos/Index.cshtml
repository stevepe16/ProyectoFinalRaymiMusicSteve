@page
@model RaymiMusic.MVC.Pages.Generos.IndexModel

@{
    ViewData["Title"] = "Géneros";
    Layout = "_Layout";
}

<h1 class="mb-4">
    <i class="bi bi-disc-fill me-2"></i>Géneros
</h1>

<p>
    <a class="btn btn-primary" asp-page="Create">
        <i class="bi bi-plus-circle me-1"></i>Nuevo Género
    </a>
</p>

<table class="table table-dark table-striped table-hover align-middle shadow-sm">
    <thead>
        <tr>
            <th><i class="bi bi-tag-fill me-1"></i>Nombre</th>
            <th class="text-center"><i class="bi bi-gear-fill"></i></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var g in Model.Generos)
        {
            <tr>
                <td>@g.Nombre</td>
                <td class="text-center">
                    <a asp-page="Edit" asp-route-id="@g.Id" class="btn btn-sm btn-outline-info me-2">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <a asp-page="Delete" asp-route-id="@g.Id" class="btn btn-sm btn-outline-danger">
                        <i class="bi bi-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
