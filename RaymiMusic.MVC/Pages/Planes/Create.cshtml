@page
@model RaymiMusic.MVC.Pages.Planes.CreateModel

@{
    ViewData["Title"] = "Crear Plan de Suscripción";
    Layout = "_Layout";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card bg-dark text-light shadow-sm border-0">
            <div class="card-body p-4">
                <h2 class="mb-4 text-center">
                    <i class="bi bi-stars me-2"></i>Crear Plan de Suscripción
                </h2>

                <form method="post">
                    <div class="mb-3">
                        <label asp-for="Plan.Nombre" class="form-label">
                            <i class="bi bi-file-earmark-text me-1"></i>Nombre del Plan
                        </label>
                        <input asp-for="Plan.Nombre" class="form-control" />
                        <span asp-validation-for="Plan.Nombre" class="text-danger" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="Plan.Precio" class="form-label">
                            <i class="bi bi-currency-dollar me-1"></i>Precio
                        </label>
                        <input asp-for="Plan.Precio" class="form-control" type="number" step="0.01" />
                        <span asp-validation-for="Plan.Precio" class="text-danger" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="Plan.DescargasMaximas" class="form-label">
                            <i class="bi bi-download me-1"></i>Descargas Máximas
                        </label>
                        <input asp-for="Plan.DescargasMaximas" class="form-control" type="number" />
                        <span asp-validation-for="Plan.DescargasMaximas" class="text-danger" />
                    </div>

                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle me-1"></i> Guardar
                        </button>
                        <a asp-page="Index" class="btn btn-secondary">
                            <i class="bi bi-x-circle me-1"></i> Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
